<style>    
    .pNode {
        position: relative;
        width: 200px;
        height: max-content;        
        background: linear-gradient(0deg, #222, #444);
        box-shadow: 10px 10px 15px #111;
        border-radius: 10px;
        border: 1px solid #222;
        margin: 5px;
        padding: 0;
        font-size: 14px;
        overflow: hidden;
        /* 
        animation-name: roll-over;
        animation-duration: 250ms;
        animation-direction: normal;
        transform-origin: 50% 50%; 
        */
    }

    .pipelineContainer {        
        display: flex;
        flex-direction: row;        
        width: 750px;
        gap: 5px;
        padding: 10px;
        border: 1px solid white;
        border-radius: 7px;
        margin: 10px;
        background-color: #222;
        overflow: scroll;        
    }
    #pipelineContainer {            
        height: 500px;        
    }

    .pipelineChannel {        
        width: 250px;
        height: max-content;        
        padding-bottom: 25px;
        background-color: #444;        
        border-radius: 7px;        
    }

    /* .pipelineChannel::before {
        content: attr(channelName);        
        color: white;
        background-color: hsla(var(--main-hue),60%, 60%, 0.2);
        font-size: 14px;
        padding: 5px;
        width: auto;        
        height: 20px;
        display: block;
        line-height: 14px;
        border-radius: 7px 7px 0 0;
    } */

    .nodeTitle {
        font-size: 16px !important;
        background-color: hsla(var(--main-hue),50%, 50%, 0.3) !important;                
    }

    #pipelineContainer select {                        
        appearance: none;
        border: 2px solid transparent;
        border-radius: 3px;
        margin: 0;
        width: 100%;
        background-color:transparent;
        color: white;
        cursor: pointer;
    }

    #pipelineContainer select:hover {       
        border: 2px solid #999;
        background-color: #222;
    }

    #pipelineContainer option { 
        font-size: 12px;              
        background-color: #222;
        color: white;        
    }


    #pipelineContainer input[type="text"] {        
        appearance: none;        
        border: 2px solid transparent;
        background-color: transparent;
        color: white;
        border-radius: 3px;
        height: 15px;        
    }       

    #pipelineContainer input[type="text"]:focus {        
        border: 2px solid transparent !important;
        background-color: white;
        color: black;
    }        

    #pipelineContainer input[type="range"] {        
        height: 10px;
    }

    #pipelineContainer input[type="checkbox"] {        
        display: inline-block;
    }

    .paramSection {
        padding: 5px;
        padding-left: 10px;
    }

    .paramLine{
        display: grid;
        grid-template-columns: 75px auto;
        gap: 10px;
        height: 25px;        
    }

    @keyframes roll-over {
       0%       { transform: rotateX(0deg);} 
       100%     { transform: rotateX(90deg);} 
    }

</style>

<div id="captureContainer" class="pipelineContainer"></div>
<div id="pipelineContainer" class="pipelineContainer"></div>
<div id="playbackContainer" class="pipelineContainer"></div>


<div id="pipelineContextMenu" class="pipelineContextMenu">
    <ul>
        <li>Add channel</li>
        <li>Remove channel</li>
    </ul>

</div>

<div id="channelContextMenu" class="pipelineContextMenu"></div>